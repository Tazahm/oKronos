<?xml version="1.0" encoding="UTF-8"?>

<!-- Layout of the input window for the players.                                                                             -->
<!--                                                                                                                         -->
<!--        +.......................................+                                                                        -->
<!--        | Name      [ Input field             ] |                                                                        -->
<!--        | Licence   [ Input field             ] |                                                                        -->
<!--        | Shirt no  [ Input field             ] |                                                                        -->
<!--        |           x goalkeeper                |                                                                        -->
<!--        |           x official                  |                                                                        -->
<!--        +.......................................+                                                                        -->
<!--        | Validate                       Cancel |                                                                        -->
<!--        +.......................................+                                                                        -->
<!--                                                                                                                         -->

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import tz.okronos.scene.control.IntegerField ?>


<BorderPane
   id="mainPane"
   fx:controller="tz.okronos.scene.operator.PlayerInputController"
   xmlns="http://javafx.com/javafx/11.0.1"
   xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane
         hgap="10"
         vgap="10">
         <padding>
            <Insets
               bottom="20.0"
               left="20.0"
               right="20.0"
               top="20.0" />
         </padding>
         <!-- current time -->
         <Label
            text="%player.name"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.halignment="LEFT" />
         <TextField
            fx:id="nameField"
            prefColumnCount="20"
            styleClass="field"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"
            GridPane.halignment="LEFT" />
         <Label
            text="%player.licence"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.halignment="LEFT" />
         <TextField
            fx:id="licenceField"
            styleClass="field"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            GridPane.halignment="LEFT" />
         <!-- differential -->
         <Label
            text="%player.shirt"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            GridPane.halignment="LEFT" />
         <IntegerField
            fx:id="shirtField"
            styleClass="field"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.halignment="LEFT" />
         <CheckBox
            fx:id="goalkeeperCheckbox"
            text="%player.goalkeeper"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3" />
          <CheckBox
            fx:id="officialCheckbox"
            text="%player.official"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4" />
       </GridPane>
   </center>
   <bottom>
      <!-- buttons -->
      <HBox
         id="buttonPane"
         GridPane.columnIndex="0"
         GridPane.rowIndex="4"
         GridPane.columnSpan="2"
         GridPane.halignment="CENTER"
         alignment="center">
         <Button
            styleClass="main-button"
            HBox.hgrow="ALWAYS"
            maxWidth="1000"
            maxHeight="1000"
            text="%modal.validate"
            onAction="#validateAction" />
          <Button
            fx:id="deleteButton"
            styleClass="main-button"
            HBox.hgrow="ALWAYS"
            maxWidth="1000"
            maxHeight="1000"
            text="%player.delete"
            onAction="#deleteAction" />
         <Button
            styleClass="main-button"
            HBox.hgrow="ALWAYS"
            maxWidth="1000"
            maxHeight="1000"
            text="%modal.cancel"
            onAction="#cancelAction" />
      </HBox>
   </bottom>
   <stylesheets>
      <URL value="@modals.css" />
   </stylesheets>
</BorderPane>