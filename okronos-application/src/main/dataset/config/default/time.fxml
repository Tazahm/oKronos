<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import tz.okronos.scene.control.TimeKeyboard ?>
<?import tz.okronos.scene.control.TimeField ?>

<BorderPane
   id="mainPane"
   fx:controller="tz.okronos.scene.operator.TimeInputController"
   xmlns="http://javafx.com/javafx/11.0.1"
   xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane
         hgap="10"
         vgap="10">
         <padding>
            <Insets
               bottom="20.0"
               left="20.0"
               right="20.0"
               top="20.0" />
         </padding>
         <!-- current time -->
         <Label
            text="%time.time"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.halignment="LEFT" />
         <TimeField
            fx:id="timeField"
            text="  00:00"
            styleClass="field"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"
            GridPane.halignment="LEFT" />
         <Label
            text="%time.modified"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.halignment="LEFT" />
         <TimeField
            fx:id="modifiedField"
            text="  00:00"
            styleClass="field"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            GridPane.halignment="LEFT" />
         <!-- differential -->
         <Label
            text="%time.diff"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            GridPane.halignment="LEFT" />
         <TimeField
            fx:id="diffField"
            text="+ 00:00"
            styleClass="field"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.halignment="LEFT" />
         <!-- time input -->
         <TimeKeyboard
            fx:id="timeKeyboard"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            GridPane.halignment="CENTER" />
      </GridPane>
   </center>
   <bottom>
      <!-- buttons -->
      <HBox
         id="buttonPane"
         GridPane.columnIndex="0"
         GridPane.rowIndex="4"
         GridPane.columnSpan="2"
         GridPane.halignment="CENTER"
         alignment="center">
         <!--spacing="10" <padding> <Insets bottom="10.0" left="0.0" right="0.0" top="20.0" /> </padding> -->
         <Button
            styleClass="main-button"
            HBox.hgrow="ALWAYS"
            maxWidth="1000"
            maxHeight="1000"
            text="%modal.validate"
            onAction="#validateAction" />
         <Button
            styleClass="main-button"
            HBox.hgrow="ALWAYS"
            maxWidth="1000"
            maxHeight="1000"
            text="%modal.cancel"
            onAction="#cancelAction" />
      </HBox>
   </bottom>
   <stylesheets>
      <URL value="@modals.css" />
   </stylesheets>
</BorderPane>